@using MvcStok.Models.Entity
@model List<TblUrunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKA</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var urn in Model)
        {
        <tr>
            <th>@urn.UrunId</th>
            <td>@urn.UrunAd</td>
            <td>@urn.Marka</td>
            <td>@urn.TblKategoriler.KategoriAd</td>
            <td>@urn.UrunFiyat</td>
            <td>@urn.Stok</td>
            <td><a href="/Urun/SİL/@urn.UrunId" class="btn btn-danger">SİL</a></td>
            <td><a href="/Urun/UrunGetir/@urn.UrunId" class="btn btn-success">GÜNCELLE</a></td>

        </tr>
        }
    </tbody>
</table>

<a href="/Urun/UrunEkle/" class="btn btn-primary">Yeni Ürün Ekle</a>